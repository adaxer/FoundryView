<UserControl x:Class="FoundryView.Client.Wpf.Shell.Views.NavigatorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FoundryView.Client.Wpf.Shell.Views"
             xmlns:common="AllCommonLib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" >
    <UserControl.Resources>
        <!--<DataTemplate x:Key="PluginTemplate">
            <TextBlock Text="{Binding Title}"/>
        </DataTemplate>-->
        <DataTemplate DataType="{x:Type common:PluginViewModel}">
            <TextBlock FontSize="15" Margin="4">
                <Hyperlink Command="{Binding ActivateCommand}">
                    <TextBlock Text="{Binding Title}" />
                </Hyperlink>
            </TextBlock>
        </DataTemplate>
    </UserControl.Resources>
    <ItemsControl ItemsSource="{Binding Plugins}" />
</UserControl>
